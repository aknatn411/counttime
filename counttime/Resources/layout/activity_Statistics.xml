<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp">

    <TextView
        android:text="STATISTICS"
        android:fontFamily="@font/turislight"
        android:layout_alignParentLeft="true"
        android:textColor="#666"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/StatisticsTitle" />
    <TextView
        android:text="1000"
        android:textSize="24dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/StatisticsTitle"
        android:id="@+id/StatsDaysRemainingValue" />
    <TextView
        android:text="Days Left"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/StatsDaysRemainingValue"
        android:id="@+id/StatsDaysRemainingText" />
    <ImageView
        android:src="@drawable/hamburger"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/StatsDaysRemainingText"
        android:paddingTop="15dp"
        android:id="@+id/StatsHamburgerImage" />
    <TextView
        android:text="Hamburgers Left to Eat"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/StatsWednesdaysRemainingValue"
        android:id="@+id/StatsWednesdaysRemainingText" />

    <TextView
        android:text="1000"
        android:textSize="24dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/StatisticsTitle"
        android:layout_toRightOf="@id/StatsDaysRemainingText"
        android:paddingLeft="30dp"
        android:id="@+id/StatsDaysServedValue" />
    <TextView
        android:text="Days Served"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/StatsDaysServedValue"
        android:layout_toRightOf="@id/StatsDaysRemainingText"
        android:paddingLeft="30dp"
        android:id="@+id/StatsDaysServedText" />

    <TextView
        android:text="1000"
        android:textSize="24dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/StatisticsTitle"
        android:layout_toRightOf="@id/StatsDaysServedValue"
        android:paddingLeft="30dp"
        android:id="@+id/StatsPercentCompleteValue"
        android:textAlignment="textEnd" />
    <TextView
        android:text="Completed"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="22.0dp"
        android:layout_below="@id/StatsPercentCompleteValue"
        android:layout_toRightOf="@id/StatsDaysServedText"
        android:paddingLeft="30dp"
        android:id="@+id/StatsPercentCompleteText"
        android:layout_marginBottom="0.0dp" />
    <TextView
        android:text=""
        android:layout_below="@id/StatsWednesdaysRemainingText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/StatsPercentAtText" />



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationStatistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navigation" />

    <TextView
        android:text="1000"
        android:textSize="24dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/StatsHamburgerImage"
        android:layout_toRightOf="@id/StatsHamburgerImage"
        android:id="@+id/StatsWednesdaysRemainingValue"
        android:layout_toLeftOf="@id/StatsWednesdaysRemainingValue"
        android:layout_alignLeft="@id/StatsHamburgerImage" />
</RelativeLayout>
