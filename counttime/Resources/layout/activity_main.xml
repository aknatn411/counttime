<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="User Name:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1" />


    <EditText
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:id="@+id/UserName" />



    <TextView
        android:text="Start Date:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/UserName"
        android:id="@+id/startDateText" />
    <EditText
        android:editable="false"
        android:inputType="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/startDateText"
        android:id="@+id/startDate" />

    <TextView
        android:text="Release Date:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startDate"
        android:id="@+id/textView2" />



    <EditText
        android:editable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:id="@+id/releaseDate"
        android:inputType="none" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/releaseDate"
        android:id="@+id/calculate"/>
    <TextView
        android:text="Loading Results"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calculate"
        android:id="@+id/remainingdays" />
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:paddingTop="10dp"
        android:scaleY="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/remainingdays"
        android:id="@+id/progressBar1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@id/progressBar1"
        android:src="@drawable/bluering"
        android:id="@+id/MainCircle"/>
    <TextView
        android:text="100%"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="42pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="145dp"
        android:layout_below="@id/progressBar1"
        android:layout_gravity="center"
        android:id="@+id/mainPercentText"
        android:foregroundGravity="center" />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navigation" />
    


</RelativeLayout>